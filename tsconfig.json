{
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js", "**/*.js"],
  "include": ["express.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
